<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eddbc7"
    android:padding="0dp">

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/bayangan">

        <LinearLayout
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Nesting a new LinearLayout for vertical orientation of texts -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <!-- New TextView for additional text below the "Profile" -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perbaharaui Foto, nama dan informasi lainnya"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="71dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/user2" />
        </LinearLayout>

    </FrameLayout>

    <!-- Your second button structure remains unchanged -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/bayangan">

        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Nesting a new LinearLayout for vertical orientation of texts -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todo List"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <!-- New TextView for additional text below the "Profile" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tulis jadwal rencana kegiatan anda"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>

            <ImageView
                android:layout_width="99dp"
                android:layout_height="91dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/menu1" />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>